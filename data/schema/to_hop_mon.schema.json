{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "To Hop Mon Schema",
  "description": "Schema cho file tổ hợp môn xét tuyển",
  "type": "object",
  "required": ["type", "combinations"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["subject_combinations"]
    },
    "description": {
      "type": "string"
    },
    "combinations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "subjects"],
        "properties": {
          "code": {
            "type": "string",
            "description": "Mã tổ hợp, ví dụ A00, A01"
          },
          "subjects": {
            "type": "array",
            "minItems": 3,
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "language": { "type": "string" },
        "version": { "type": "string" }
      }
    }
  }
}
