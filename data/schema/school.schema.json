{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "School Schema",
  "description": "Schema kiểm tra cấu trúc dữ liệu cho các file trường/khoa",
  "type": "object",
  "required": ["school_id", "school_name", "majors"],
  "properties": {
    "school_id": {
      "type": "string",
      "description": "Mã trường/khoa nội bộ, dùng để liên kết với ngành"
    },
    "school_name": {
      "type": "string",
      "description": "Tên trường/khoa tiếng Việt"
    },
    "school_name_en": {
      "type": "string",
      "description": "Tên trường/khoa tiếng Anh"
    },
    "description": {
      "type": "string",
      "description": "Mô tả tổng quan về trường/khoa"
    },
    "majors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "major_id của ngành thuộc trường/khoa"
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
